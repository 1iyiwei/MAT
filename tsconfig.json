{
    "compilerOptions": {
        "charset": "utf8",
        "alwaysStrict": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "target": "es2015",
        "declaration": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "outDir": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
        "mode": "modules",
        "includeDeclarations": false,
        "excludeExternals": true,
        "exclude": [
            //"**/*..ts",
            "**/node_modules/**/*",
            "**/src/debug/**/*",
            "**/src/mat/**/*",
            "**/src/svg/**/*",
            "**/src/x/**/*",
            "**/src/bounding-box/**/*",
        ],
        "module"   : "commonjs",
        "target"   : "es2015",
        "name"     : "FloMat",
        //"json"     : "docs/docs.json",
        "out"      : "docs/html",
        "includes" : "./src/docs",
        "theme"    : "./docs/theme",
    }
}